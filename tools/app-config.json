{
  "app": {
    "name": "Dev Server App",
    "id": "com.mohamed.dev_server",
    "package_name": "dev_server",
    "description": "A Flutter application with auto-update support",
    "version": "1.0.1",
    "build_number": 1,
    "author": "MohamedAboElnasrHassan",
    "organization": "Mohamed Dev",
    "website": "https://github.com/{repository.owner}"
  },
  "repository": {
    "owner": "MohamedAboElnasrHassan",
    "name": "dev_server_app",
    "branch": "main",
    "base_url": "https://github.com/{repository.owner}/{repository.name}",
    "releases_url": "{repository.base_url}/releases",
    "download_url": "{repository.base_url}/releases/download/v{app.version}"
  },
  "github": {
    "token": "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",
    "auto_create": true,
    "auto_push": true,
    "auto_release": true,
    "auto_tag": true,
    "auto_build": true,
    "auto_analyze": true,
    "auto_sync": true
  },
  "update": {
    "enabled": true,
    "is_required": true,
    "latest_version": "1.0.1",
    "latest_build_number": 1,
    "min_version": "0.9.0",
    "notes_url": "{repository.base_url}/releases/tag/v{app.version}",
    "change_log": "- Added auto-update feature\n- Performance improvements\n- Fixed multiple issues\n- Support for all platforms",
    "release_date": "2023-11-15",
    "repository": "https://github.com/MohamedAboElnasrHassan/dev_server_app",
    "settings": {
      "check_interval_hours": 24,
      "auto_download": false,
      "show_notification": true,
      "background_check": true
    },
    "windows": {
      "download_url": "https://github.com/MohamedAboElnasrHassan/dev_server_app/releases/download/v1.0.2/dev_server-v1.0.2-setup.exe",
      "min_version": "0.9.0"
    },
    "macos": {
      "download_url": "https://github.com/MohamedAboElnasrHassan/dev_server_app/releases/download/v1.0.2/dev_server-v1.0.2.dmg",
      "min_version": "0.9.0"
    },
    "linux": {
      "download_url": "https://github.com/MohamedAboElnasrHassan/dev_server_app/releases/download/v1.0.2/dev_server-v1.0.2.AppImage",
      "min_version": "0.9.0"
    },
    "android": {
      "download_url": "https://github.com/MohamedAboElnasrHassan/dev_server_app/releases/download/v{version}/dev_server-v{version}.apk",
      "min_version": "0.9.0"
    },
    "ios": {
      "download_url": "https://apps.apple.com/app/id123456789",
      "min_version": "0.9.0"
    }
  },
  "build": {
    "common": {
      "output_dir": "releases/v{app.version}",
      "app_icon": "assets/images/logo.png"
    },
    "android": {
      "package_name": "{app.id}",
      "min_sdk_version": 21,
      "target_sdk_version": 33,
      "build_command": "flutter build apk --release",
      "output_file": "build/app/outputs/flutter-apk/app-release.apk"
    },
    "windows": {
      "display_name": "{app.name}",
      "publisher_display_name": "{app.author}",
      "identity_name": "dev-server-app",
      "publisher": "CN={app.author}",
      "version": "{app.version}.0",
      "capabilities": "internetClient",
      "build_command": "flutter build windows --release",
      "output_dir": "build/windows/runner/Release",
      "setup": {
        "enabled": true,
        "languages": [
          "english",
          "arabic"
        ],
        "license_file": "LICENSE",
        "privileges_required": "lowest",
        "create_desktop_icon": true,
        "create_start_menu_icon": true,
        "app_comments": "تطبيق خادم التطوير",
        "app_contact": "support@{app.website}",
        "default_dir_name": "{app.name}",
        "allow_dir_selection": true,
        "allow_cancel_during_install": true,
        "compression": "lzma",
        "solid_compression": true,
        "wizard_style": "modern",
        "run_after_install": true,
        "create_uninstall_icon": true,
        "welcome_message": "مرحباً بك في معالج تثبيت {app.name}. سيرشدك هذا المعالج خلال عملية تثبيت {app.name} على جهازك."
      }
    },
    "macos": {
      "bundle_name": "{app.name}",
      "bundle_id": "{app.id}",
      "min_version": "10.14",
      "build_command": "flutter build macos --release",
      "output_dir": "build/macos/Build/Products/Release"
    },
    "linux": {
      "app_name": "{app.name}",
      "app_id": "{app.id}",
      "build_command": "flutter build linux --release",
      "output_dir": "build/linux/x64/release/bundle"
    },
    "ios": {
      "bundle_id": "{app.id}",
      "min_version": "12.0",
      "build_command": "flutter build ios --release --no-codesign",
      "output_dir": "build/ios/iphoneos"
    }
  }
}